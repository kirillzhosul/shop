<!-- Merchandise shop website.-->
<!DOCTYPE html>
<html lang="ru">
    <head>
        <!-- Boostrap. -->
        <link rel="stylesheet" href="{{ url_for('static', filename='/bootstrap/css/bootstrap.css')}}">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!-- Title. -->
        <title>{% block title %}{% endblock %}</title>
        <!-- Style. -->
        <style>{% block style %}{% endblock %}</style>
    </head>
    <body>
        <!-- Header. -->
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" href="/">Магазин мерча</a>

                <!-- Buttons. -->
                <ul class="nav navbar-nav">
                    {% if 1 %}
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/catalog">Каталог</a>
                        </li>
                        &nbsp; &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-outline-secondary" href="/profile">Профиль</a>
                        </li>
                        &nbsp; &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-success" href="/orders">Заказы <span class="badge badge-light">0</span></a>
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-success" href="/cart">Корзина <span class="badge badge-light">0</span></a>
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-success" href="/favorites">Избранное <span class="badge badge-light">0</span></a>
                        </li>
                    {% else %}
                     <li class="nav-item active">
                            <a class="btn btn-outline-secondary" href="/about">О нас</a>
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-outline-secondary" href="/contacts">Контакты</a>
                        </li>
                    {% endif %}

                </ul>

                <!-- Search. -->
                <form class="form-inline" method="GET" action="/catalog">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">
                            <input class="form-control" type="search" name="q" placeholder="Запрос" aria-label="Запрос">
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <button class="btn btn-outline-success" type="submit">Найти</button>
                        </li>
                    </ul>
                </form>
            </div>
        </nav>

        <!--
        <div class="position-relative" style="background-color: #f8f9fa;">
            <div class="container py-6 text-center">
                <div class="row position-relative">
                    <div class="col-lg-10 mx-auto">
                        <h6 class="text-uppercase text-primary mb-5">Добро пожаловать к нам</h6>
                        <h4 class="display-4 mb-5">Магазин мерча<br>для <b>своих</b></h4>
                    </div>
                </div>

            </div>
        </div> -->

        <!-- Body. -->
        {% block body %}{% endblock %}
    </body>
</html>