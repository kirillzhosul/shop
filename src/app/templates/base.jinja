<!-- Merchandise shop website.-->
<!DOCTYPE html>
<html lang="ru">
    <head>
        <!-- Boostrap. -->
        <link rel="stylesheet" href="{{ url_for('static', filename='/bootstrap/css/bootstrap.css')}}">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!-- Title. -->
        <title>{% block title %}{% endblock %}</title>
        <!-- Style. -->
        <style>{% block style %}{% endblock %}</style>
        <!-- Includes. -->
        {% block include %}{% endblock %}
    </head>
    <body>
        <!-- Header. -->
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" href="/">Магазин мерча</a>

                <!-- Buttons. -->
                <ul class="nav navbar-nav">
                    {% if user.is_authenticated %}
                        {% set counters = user.get_counters() %}
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/catalog">Каталог</a>
                        </li>
                        &nbsp; &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/profile">Профиль
                           <span class="badge badge-dark" id="counter-balance-real">{{ user.balance_real }}₽</span>
                            <span class="badge badge-dark" id="counter-balance-bonus">{{ user.balance_bonus }}₽</span>
                            </a>
                        </li>
                        &nbsp; &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-primary" href="/orders">Заказы <span class="badge badge-light" id="counter-orders">{{ counters[0] }}</span></a>
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-primary" href="/cart">Корзина
                                <span class="badge badge-light" id="counter-cart">{{ counters[1][0] }}</span>
                                <span class="badge badge-light" id="counter-cart-price">{{ counters[1][1] }}₽</span>
                            </a>
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-primary" href="/favorites">Избранное <span class="badge badge-light" id="counter-favorites">{{ counters[2] }}</span></a>
                        </li>
                    {% else %}
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/catalog">Каталог</a>
                        </li>
                        &nbsp; &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/auth">Авторизоваться</a>
                        </li>
                        &nbsp; &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/about">О нас</a>
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <a class="btn btn-outline-primary" href="/contacts">Контакты</a>
                        </li>
                    {% endif %}

                </ul>

                <!-- Search. -->
                {% block search %}
                <form class="form-inline" method="GET" action="/catalog">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">
                            <input class="form-control" type="search" name="q" placeholder="Запрос" aria-label="Запрос">
                        </li>
                        &nbsp;
                        <li class="nav-item active">
                            <button class="btn btn-outline-primary" type="submit">Найти</button>
                        </li>
                    </ul>
                </form>
                {% endblock%}
            </div>
        </nav>

        <!-- Body. -->
        {% block body %}{% endblock %}
    </body>
</html>