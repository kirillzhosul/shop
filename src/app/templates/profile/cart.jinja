{% extends 'base.jinja' %}

{% block title %}Корзина{% endblock %}

{% block include %}
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="{{ url_for('static', filename='js/cart.js')}}"></script>
{% endblock %}

{% block body %}
<div class="container text-center py-5 ">
    <div class="row position-relative">
        <div class="col-lg mx-auto">
            <h1 class="display-4">Корзина</h1>
            <h4>Всего {{ cart_count }} товаров на сумму {{ cart_price }}₽</h4>
            <a class="btn btn-primary text-light" href="/catalog">В каталог</a>
            <a class="btn btn-success text-light" onclick="orderCart()">Заказать</a>
        </div>
    </div>
</div>
<div class="container-fluid text-center">
    <div class="row mx-5">
        {% for cart_item in user.cart_items %}
            {% set scores = cart_item.item.get_scores() %}
            <div class="col-lg-4 mb-5" id="cart-item-{{ cart_item.id }}">
                <div class="card">
                    <div class="card-body">
                        <img class="card-img-top" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22286%22%20height%3D%22180%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20286%20180%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_17ed5db9200%20text%20%7B%20fill%3Argba(255%2C255%2C255%2C.75)%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_17ed5db9200%22%3E%3Crect%20width%3D%22286%22%20height%3D%22180%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%22107.1953125%22%20y%3D%2296.3%22%3E286x180%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" alt="{{ cart_item.item.title }}">
                        <h3 class="card-title"><a href="/item?id={{ cart_item.item.id }}" class="link-dark">{{ cart_item.item.title|truncate(16, True) }}</a></h3>

                        <span class="card-subtitle text-muted">
                            <b>{{ cart_item.item.get_price_with_discount()[0] }}₽</b><br>
                            <a href="/catalog?cid={{ cart_item.item.category_id }}" class="link-dark"><i>{{ cart_item.item.get_category_title() }}</i><br></a>
                            <a href="/item?id={{ cart_item.item.id }}#reviews">{{ scores[2] }} отзывов</a>
                        </span>

                        <p class="card-text text-muted mb-3 mt-4">
                            <a href="/item?id={{ cart_item.item.id }}">
                                {{ cart_item.item.description|truncate(16, True) }} <!-- |wordwrap(16, true, "<br>") -->
                            </a>
                        </p>

                        <a class="btn btn-primary text-light" href="/item?id={{ cart_item.item_id }}">Открыть</a>
                        <a class="btn btn-warning text-light" onclick="removeFromCart({{ cart_item.id }})">Удалить</a>
                    </div>


                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}